package 이중for문;

import java.util.Scanner;

public class Ex12팩토리얼구하기 {

	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		System.out.println("숫자 입력 : ");
		int a=1;
		int p;
//		for(int i=1;i<=p;i++) {
//			System.out.println(a*=i*p); 
//		}
		

		do {
			p=sc.nextInt();
			a=p*(p-1);
		}while(p>=1);
		System.out.println(a);
		
		
		
	}

}
