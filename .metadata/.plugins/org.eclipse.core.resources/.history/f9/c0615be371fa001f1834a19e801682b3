
public class Ex01복합대입_증감연산자 {

	public static void main(String[] args) {
		
//		증감연산자
//		- 단항연산자
//		- +1 or -1
//		- 데이터++, ++데이터 >> 데이터 +1
		
		
		int a =3;
		
		System.out.println(a+1);  		// 실제 a 의 값이 변하지 않음.
		System.out.println(a++);		// 해당 구문 실행 후 연산.
		System.out.println(++a);		// 연산 후 해당 구문 실행.
		
		
		
		
		
	}

}
