package 이중for문;

public class Ex04별찍기응용 {

	public static void main(String[] args) {

		for (int j = 0; j < 5; j++) {
//			공백
//			전체 줄 수 - 현재 진행된 줄 수
//			5-j
			for (int i = 5; i > 5-j; i++) {
				System.out.print(" ");
			}
			for (int i = 1; i <= j; i++) {
				System.out.print("*");
			}
			System.out.println();
		}

	}

}
