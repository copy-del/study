package 삼항연산자;

import java.util.Scanner;

public class Ex02홀짝구하기 {

	public static void main(String[] args) {
//		1. 입력도구
//		2. 정수 입력 후 저장
//		3. 입력받은 정수가 홀수인지 짝수인지 판별
//		4. 결과를 출력
		
		Scanner sc = new Scanner(System.in);
		System.out.println("정수 입력 : ");
		int num = sc.nextInt();
		System.out.println(num%2==0 ? "짝수" : "홀수");

	}

}
