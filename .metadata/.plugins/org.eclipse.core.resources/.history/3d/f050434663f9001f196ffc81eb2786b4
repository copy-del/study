package while문;

import java.util.Scanner;

public class Ex02while문예제 {

	public static void main(String[] args) {
//		
		
		Scanner sc = new Scanner(System.in);
		System.out.print("정수 입력 : ");
		int num = sc.nextInt();
		int a;
		int b;
		
		a=0+num;
		b=a+num;
		a+=num;
		
		
		while(num!=-1) {
			
			System.out.println("누적결과 : ");
			System.out.print("정수 입력 : ");
			num = sc.nextInt();
		} System.out.println("누적결과 : ");
		System.out.println("종료되었습니다.");

	}

}
